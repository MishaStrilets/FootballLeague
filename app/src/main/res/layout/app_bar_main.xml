<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="strilets.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:text="â„–"
        android:id="@+id/textTitlePosition"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:text="Team"
        android:id="@+id/textTitleNameTeam"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="45dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:text="G"
        android:id="@+id/textTitleCountGames"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="195dp"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:text="S"
        android:id="@+id/textTitleScoredBalls"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="230dp"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:text="M"
        android:id="@+id/textTitleMissedBalls"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="265dp"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:text="D"
        android:id="@+id/textTitleDifferenceBalls"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="300dp"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:text="P"
        android:id="@+id/textTitlePoints"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="335dp"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp" />

</android.support.design.widget.CoordinatorLayout>
